            var numOficinas = document.querySelector('#numero-oficinas')
            var numTerritorios = document.querySelector('#numero-territorios')
            var numFirmasMiembros = document.querySelector('#numero-firmas-miembros')
            var numExpertos = document.querySelector('#numero-expertos')
            var ingresos = document.querySelector('#ingresos')
            var timersDone= 0;
            const timersTable= {
            numOficinas:{
                start:0,
                end:640,
                done:false
            },
            numTerritorios:{
                start:0,
                end:148,
                done:false
            },
            numFirmasMiembros:{
                start:0,
                end:123,
