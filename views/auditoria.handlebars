    <script>
        gsap.to(".first", {
            scrollTrigger: "#diagram", 
            duration:3.5,
            width:200,
            height:200
            });

        gsap.to(".step", {
            scrollTrigger: "#diagram", 
            duration:1,
            x:0
            });
            
        gsap.to(".fas.fa-chevron-right", {
            scrollTrigger: "#diagram", 
            duration:13,
            opacity:1
            });
        const text = 'Servicios de Auditoría'
         function typeHeader(){
                for(let i = 0; i < text.length;i++){
                    let header = document.querySelector('#header h2')
