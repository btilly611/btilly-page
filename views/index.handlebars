            },
            numExpertos:{
                start:0,
                end:37000,
                done:false
            },
               ingresos:{
                start:0,
                end:4.04,
                done:false
            }

             }
            const counters = Object.keys(timersTable)
            function runTimers(){
                if(timersDone === counters.length){
                    clearInterval(runCounters)
                }
                counters.forEach((timer,index)=>{
                    if(timersTable[timer]['start'] === timersTable[timer]['end'] && timersTable[timer]['done'] === false){
                        timersTable[timer]['done']=true
                        timersDone++
                        console.log('reached point',timersTable[timer]['done'])
                    }else if(timersTable[timer]['done']===false){
                        if(timer === 'numExpertos'){
                            console.log('expertos')
                            timersTable[timer]['start'] =  timersTable[timer]['start']+200
                            window[timer].innerHTML=parseInt(window[timer].innerHTML)+200
                        }else if(timer === 'ingresos'){
                            timersTable[timer]['start'] =  timersTable[timer]['start']+0.1
                            window[timer].innerHTML=parseFloat(window[timer].innerHTML).toFixed(2)+1
                        }
                        else{
                            timersTable[timer]['start'] =  timersTable[timer]['start']+1
                            window[timer].innerHTML=parseInt(window[timer].innerHTML)+1
                    }
                      
                    }
            })
            }
            function startTimer(){
                runCounters = setInterval(runTimers,50)
            }
          
