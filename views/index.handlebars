        <script>

            // MAIN SECTION SLIDES 
            function nextSlide(){
                if(currentSlide === carouselDivs.length-1){
                    carouselDivs[currentSlide].style.display="none"
                    currentSlide = 0;
                    carouselDivs[currentSlide].style.display="block"
                }else{
                    carouselDivs[currentSlide].style.display="none"
                    currentSlide++
                    carouselDivs[currentSlide].style.display="block"
                }
            }

            function prevSlide(){
                if(currentSlide === 0){
                    carouselDivs[currentSlide].style.display="none"
                    currentSlide = carouselDivs.length-1;
                    carouselDivs[currentSlide].style.display="block"
